# FTH Program - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/fth_program?schema=public"

# ============================================
# API SERVER
# ============================================
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# XRPL CONFIGURATION
# ============================================
# Testnet: wss://s.altnet.rippletest.net:51233
# Mainnet: wss://xrplcluster.com
XRPL_SERVER_URL=wss://s.altnet.rippletest.net:51233

# Issuer wallet seed (NEVER commit real seeds!)
FTHUSD_ISSUER_SEED=sEdSKaCy2JT7JaM7v95H9SxkhP9wS2r
OPERATIONS_WALLET_SEED=sEdTM1uX8pu2do5XvTnutH6HsouMaM2

# NFT issuer wallet (can be same as FTHUSD or separate)
NFT_ISSUER_SEED=sEdSKaCy2JT7JaM7v95H9SxkhP9wS2r

# ============================================
# EVM CONFIGURATION
# ============================================
# Testnet: https://sepolia.infura.io/v3/YOUR-PROJECT-ID
# Mainnet: https://mainnet.infura.io/v3/YOUR-PROJECT-ID
EVM_RPC_URL=https://sepolia.infura.io/v3/your-infura-project-id
EVM_CHAIN_ID=11155111

# Private key for EVM transactions (PoR anchoring)
EVM_PRIVATE_KEY=0xyour-private-key-here

# PoR Registry contract address (deploy first)
POR_REGISTRY_ADDRESS=0x...

# Chainlink Oracle addresses (Sepolia testnet)
CHAINLINK_GOLD_FEED=0x...
CHAINLINK_SILVER_FEED=0x...
CHAINLINK_PLATINUM_FEED=0x...

# ============================================
# US BANKING (Production Only)
# ============================================
# Replace with your banking provider
BANKING_PROVIDER=PLAID
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Wire transfer provider (optional)
WIRE_PROVIDER=FEDWIRE
WIRE_API_KEY=your-wire-api-key

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus pushgateway (if using)
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# ============================================
# CRON JOBS
# ============================================
# USDF Rewards: Quarterly (every 3 months)
USDF_REWARDS_CRON=0 0 1 */3 *

# PoR Snapshot: Every 10 minutes
POR_SNAPSHOT_CRON=*/10 * * * *

# Treasury Reconciliation: Daily at 2 AM
TREASURY_RECONCILIATION_CRON=0 2 * * *

# Backup: Every 6 hours
BACKUP_CRON=0 */6 * * *

# ============================================
# SECURITY
# ============================================
# Vault configuration (for production secret management)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your-vault-token

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_NFT_MINTING=true
ENABLE_EVM_ANCHORING=true
ENABLE_USDF_REWARDS=true
ENABLE_GOLD_PURCHASES=true

# ============================================
# EXTERNAL SERVICES
# ============================================
# KYC Provider
KYC_PROVIDER=ONFIDO
ONFIDO_API_KEY=your-onfido-api-key
ONFIDO_WEBHOOK_TOKEN=your-webhook-token

# Email service (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@fth.finance

# SMS service (optional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# ADMIN
# ============================================
ADMIN_EMAIL=admin@fth.finance
ADMIN_INITIAL_PASSWORD=change-this-password

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000,https://fth.finance

# ============================================
# FILE UPLOADS
# ============================================
MAX_FILE_SIZE_MB=10
UPLOAD_DEST=./uploads

# ============================================
# SESSION
# ============================================
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET=your-webhook-signing-secret
WEBHOOK_BASE_URL=https://api.fth.finance/webhooks
